      <ul>
      <% @video.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="video_form_field file_upload_field">
   <span class="clip_label">Clip</span> <%= f.label :clip, "Upload", class: "upload_label" %>
    <%= f.file_field :clip, class: "file_upload" %>
  </div>

  <div class="video_form_field">
    <%= f.label :url, "Video Url" %><br>
    <%= f.text_field :url, placeholder: "Paste url here" %>
  </div>

  <div class="video_form_field">
    <%= f.label :title %><br>
    <%= f.text_field :title, placeholder: "What is the title of your video?" %>
  </div>

  <div class="video_form_field">
    <%= f.label :description %><br>
    <%= f.text_area :description, placeholder: "What is your video about?" %>
  </div>

  <%= f.hidden_field :video_code %>

  <div class="actions">
    <%= f.submit class: "submit_video_button", name: "Upload video now" %>
  </div>
<% end %>
